# ==============================================
# AI MARKETING MONSTER - ENVIRONMENT VARIABLES
# ==============================================

# ==============================================
# ü§ñ CORE AI SETTINGS
# ==============================================

# Claude AI API Key (Required - Get from: https://console.anthropic.com/)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4000

# ==============================================
# üì± SOCIAL MEDIA API KEYS
# ==============================================

# Instagram Graph API (Required)
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_PAGE_ID=your-instagram-page-id
INSTAGRAM_USER_ID=your-instagram-user-id

# Facebook Pages API (Optional but recommended)
FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-token
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# LinkedIn Marketing API (Optional - for B2B content)
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_COMPANY_ID=your-linkedin-company-id
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# YouTube Data API (Optional - for video metadata)
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=your-youtube-channel-id

# Telegram Bot API (Optional - for channel management)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Pinterest API (Optional - for pin management)
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token
PINTEREST_BOARD_ID=your-pinterest-board-id

# ==============================================
# üé® IMAGE GENERATION SERVICES
# ==============================================

# OpenAI DALL-E (Optional - for custom images)
OPENAI_API_KEY=your-openai-api-key

# Unsplash API (Free alternative for stock photos)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key

# ==============================================
# üåê APPLICATION SETTINGS
# ==============================================

# Server Configuration
PORT=3000
NODE_ENV=production
BASE_URL=https://your-site.netlify.app

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
ADMIN_PASSWORD=your-secure-admin-password
API_RATE_LIMIT=100
CORS_ORIGIN=https://your-site.netlify.app

# ==============================================
# üìä ANALYTICS & TRACKING
# ==============================================

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Real Mute Website
REALMUTE_WEBSITE=https://www.realmute.com
REALMUTE_SHOP_URL=https://www.realmute.com/shop

# ==============================================
# üìß EMAIL & NOTIFICATIONS
# ==============================================

# Email Service (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password

# Slack Webhook (Optional - for monitoring alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# ==============================================
# üöÄ ADVANCED SETTINGS
# ==============================================

# Content Generation Settings
POSTS_PER_DAY=12
CONTENT_STYLE=professional
TARGET_AUDIENCE=musicians,brass-players,students
BRAND_VOICE=helpful,expert,friendly

# Posting Schedule (24-hour format, comma-separated)
POSTING_HOURS=9,12,15,18,21

# Performance Monitoring
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
LOG_LEVEL=info

# Feature Flags
ENABLE_AUTO_POSTING=true
ENABLE_IMAGE_GENERATION=true
ENABLE_HASHTAG_OPTIMIZATION=true
ENABLE_A_B_TESTING=true

# ==============================================
# üîß DEVELOPMENT SETTINGS
# ==============================================

# Development Mode (set to false in production)
DEBUG_MODE=false
MOCK_API_CALLS=false
ENABLE_CONSOLE_LOGS=true

# Database (Optional - for advanced analytics)
DATABASE_URL=your-database-url-here
MONGODB_URI=your-mongodb-connection-string

# ==============================================
# üìù NOTES
# ==============================================

# 1. Copy this file to .env and fill in your values
# 2. Never commit .env to version control
# 3. Required keys: CLAUDE_API_KEY, INSTAGRAM_ACCESS_TOKEN
# 4. Optional keys will disable features if not provided
# 5. Get Instagram token: https://developers.facebook.com/docs/instagram-graph-api/
# 6. Get Claude API key: https://console.anthropic.com/
# 7. For local development, use: netlify dev
# 8. For production deployment, set these in Netlify dashboard

